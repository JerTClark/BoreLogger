<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OptionsScreen" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/options_screen_textView4"
            android:layout_below="@+id/new_bore_journal_title"
            android:text="@string/bore_journal_description"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <Button
            android:id="@+id/continue_bore_journal_button"
            android:layout_below="@+id/new_bore_journal_button"
            android:text="@string/continue_bore_journal"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/list_files_button"/>

        <Button
            android:id="@+id/boreJournalToBoreLog_button"
            android:layout_below="@+id/continue_bore_journal_button"
            android:text="@string/create_log"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/list_files_button"/>

        <Button
            android:id="@+id/new_bore_log_button"
            android:layout_below="@+id/options_screen_textView5"
            android:text="@string/create"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/list_files_button"/>
        <Button
            android:id="@+id/continue_bore_log_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_bore_log_button"
            android:text="@string/continue_bore_journal"
            android:background="@drawable/list_files_button"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/new_bore_journal_button"
            android:layout_below="@+id/options_screen_textView4"
            android:text="@string/create"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/list_files_button"/>

        <TextView
            android:id="@+id/new_bore_journal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@+id/options_screen_textView4"
            android:layout_below="@+id/continue_bore_log_button"
            android:text="@string/new_bore_journal"
            android:textSize="@dimen/header_text_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingStart="5dp"
            android:background="@drawable/red_background" />

        <TextView
            android:id="@+id/options_screen_textView5"
            android:layout_below="@+id/new_bore_log_title"
            android:text="@string/new_borelog_description"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/createPDF_textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/boreJournalToBoreLog_button"
            android:text="@string/create_pdf"
            android:textStyle="bold"
            android:textSize="@dimen/header_text_size"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingStart="5dp"
            android:background="@drawable/red_background" />

        <TextView
            android:id="@+id/createPDF_textView2"
            android:layout_below="@+id/createPDF_textView1"
            android:text="@string/select_borelog_description"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <Button
            android:id="@+id/create_pdf_button"
            android:layout_below="@+id/createPDF_textView2"
            android:text="@string/create_pdf"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/list_files_button"/>

        <!--<ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY"
            android:src="@drawable/bison_inc_logo" /> -->

        <TextView
            android:id="@+id/new_bore_log_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/bore_log"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingStart="5dp"
            android:background="@drawable/red_background" />

    </RelativeLayout>
