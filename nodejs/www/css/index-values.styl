contactBorderLeft()
  background: -webkit-linear-gradient(left, background-color-subtitle, #000000, #000000); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(right, background-color-subtitle, #000000, #000000); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(right, background-color-subtitle, #000000, #000000); /* For Firefox 3.6 to 15 */
  background: linear-gradient(to right, background-color-subtitle, #000000, #000000); /* Standard syntax */
