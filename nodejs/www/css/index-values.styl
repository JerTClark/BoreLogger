global-background-color = white
global-color = white
global-font-family = "Bookman", Georgia, "Times New Roman", serif
background-color-title = black
font-family-lintsec = "Lintsec", sans-serif
font-family-roboto = "Roboto-Bold", sans-serif
font-family-rocksalt = "RockSalt", sans-serif
color-titleBarH2 = white
color-subtitle = white
color-subtle-tint = #d3d3d3
color-gray = gray
color-red = red
color-firebrick = firebrick
text-shadow-firebrick = 0 0 2px firebrick
text-shadow-red = 0 0 2px red
text-shadow-orange = 0 0 2px orange
box-shadow-orange = -5px 5px 5px orange
background-color-aside = black
background-color-subtitle = #ff0900

@keyframes drilling
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)

@keyframes stopDrilling
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)

globalBody()
  margin 0
  color global-color
  background-color global-background-color
  -moz-perspective 100px
  -ms-perspective 100px
  -webkit-perspective 100px
  perspective 100px

globalTitleBar()
  display flex
  line-height 1em
  background-color #000000

xSmallTitleBar()
  display block
  line-height 2em

globalImage()
  margin-top auto
  margin-bottom auto
  margin-left 1%
  height 7%
  width 7%
  -webkit-transition-duration 1s
  -moz-transition-duration 1s
  -ms-transition-duration 1s
  transition-duration 1s

globalImageHovered()
  -webkit-animation drilling 700ms linear 0s 1, drilling 600ms linear 0s 1, drilling 500ms linear 0s 1, drilling 400ms linear 0s 1, drilling 300ms linear 0s 1, drilling 200ms linear 0s infinite
  -moz-animation drilling 700ms linear 0s 1, drilling 600ms linear 0s 1, drilling 500ms linear 0s 1, drilling 400ms linear 0s 1, drilling 300ms linear 0s 1, drilling 200ms linear 0s infinite
  -ms-animation drilling 700ms linear 0s 1, drilling 600ms linear 0s 1, drilling 500ms linear 0s 1, drilling 400ms linear 0s 1, drilling 300ms linear 0s 1, drilling 200ms linear 0s infinite
  animation drilling 700ms linear 0s 1, drilling 600ms linear 0s 1, drilling 500ms linear 0s 1, drilling 400ms linear 0s 1, drilling 300ms linear 0s 1, drilling 200ms linear 0s infinite
  -webkit-animation-fill-mode forwards
  -moz-animation-fill-mode forwards
  -ms-animation-fill-mode forwards
  animation-fill-mode forwards

globalImageUnHovered()
  -webkit-animation stopDrilling 1500ms linear 0s 1
  -moz-animation stopDrilling 800ms linear 0s 1, stopDrilling 1s linear 0s 1, stopDrilling 2s ease-out 0s 1
  -ms-animation stopDrilling 800ms linear 0s 1, stopDrilling 1s linear 0s 1, stopDrilling 2s ease-out 0s 1
  animation stopDrilling 800ms linear 0s 1, stopDrilling 1s linear 0s 1, stopDrilling 2s ease-out 0s 1
  -webkit-animation-fill-mode forwards
  -moz-animation-fill-mode forwards
  -ms-animation-fill-mode forwards
  animation-fill-mode forwards

globalTitle()
  flex 5
  padding-left 1.5%
  background-color background-color-title

xSmallTitle()
  padding 1%
  background-color background-color-title

globalTitleBarH1()
